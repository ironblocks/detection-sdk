{
    "name": "external-detection",
    "version": "1.0.0",
    "description": "External Detection System",
    "engines": {
        "node": ">=16.15.1",
        "npm": ">=8.11.0"
    },
    "author": "Ironblocks",
    "license": "ISC",
    "scripts": {
        "build": "npx tsc --project ./",
        "postbuild": "rsync -ar --prune-empty-dirs --include=*.proto --exclude=*.ts src/ build/src/",
        "start": "node ./build/src/main.js",
        "test": "NODE_ENV=test ts-mocha -n loader=ts-node/esm -p tsconfig.json --exit --timeout 25000 'tests/unit-tests/**/*.ts'"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.8.13",
        "@grpc/proto-loader": "^0.7.6",
        "dotenv": "^16.0.3",
        "lodash": "^4.17.21",
        "ts-node": "^10.9.1",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "mocha": "^10.2.0",
        "ts-mocha": "^10.0.0",
        "typescript": "^5.0.2"
    }
}
